.login
  %h2.login-text 회원가입
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .user-input
      .field
        = f.label "이메일"
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label "비밀번호"
        = f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}자 이상 입력해 주세요", class: "password"
        - if @minimum_password_length
          %em.passward-warn
            (#{@minimum_password_length}자 이상 입력해 주세요)
      .field
        = f.label "비밀번호 확인", class: "new-password"
        = f.password_field :password_confirmation, autocomplete: "new-password"
    .btn-wrapper
      .actions
        = f.submit "회원가입", class: "btn-submit"