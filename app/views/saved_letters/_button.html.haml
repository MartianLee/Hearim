- if current_user.present? and current_user.saved_letters.pluck(:letter_id).include?(letter.id)
    = link_to image_tag("buttons/saved@3x.png", class: "btn-save"), saved_letters_path(letter: letter), remote: true, method: :post, class: "btn", id: 'js-save-touch-' + letter.id.to_s, "data-turbolinks": "false"
- else
    = link_to image_tag("buttons/fill-35@3x.png", class: "btn-save"), saved_letters_path(letter: letter), remote: true, method: :post, class: "btn", id: 'js-save-touch-' + letter.id.to_s, "data-turbolinks": "false"