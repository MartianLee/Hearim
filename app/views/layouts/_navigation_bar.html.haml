.navigation-bar
  .menu
    = link_to image_tag("buttons/x@3x.png", class: "btn-menu-close"), :back if current_page?(menu_path)
    - if defined?(resource) and current_page?(new_user_registration_path(resource))
      = link_to image_tag("buttons/x@3x.png", class: "btn-menu-close"), :back 
    - else
      = link_to image_tag("buttons/menu@3x.png", class: "btn-menu"), menu_path unless current_page?(menu_path)
  .refresh
    = link_to '글쓰기', new_letter_path, class: "btn-new-letter" if current_page?(letters_path) or current_page?(root_path)
    = link_to image_tag("buttons/back@3x.png", class: "btn-refresh"), :back if params[:id].present? and current_page?(letter_path)

  .name
    = "공개된 편지" if current_page?(letters_path) or current_page?(root_path)
    = "내게 편지쓰기" if current_page?(new_letter_path)
    = "내게 쓴 편지함" if current_page?(my_letters_path)
    = "저장한 편지" if current_page?(saved_letters_path)
    = "오늘의 편지" if current_page?(today_letters_path)
    = "정보" if current_page?(about_path)
    